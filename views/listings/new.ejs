<% layout("./layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br/>
            <h3>Create a New Listing</h3><br/>
            <form 
             method="POST" 
             action="/listings" 
             novalidate class="needs-validation" 
             enctype="multipart/form-data"
            >
                <div class="mb-3 main">
                    <lable for="title" class="form-label">Title...</lable>
                    <input 
                        type="text" 
                        name="listing[title]" 
                        placeholder="Enter a Striking Title..." 
                        class="form-control"
                        required
                    />
                    <div class="valid-feedback">
                        Title Looks good!
                    </div>
    
                </div>
                <div class="mb-3 main">
                    <lable for="description" class="form-label">Description...</lable>
                    <textarea name="listing[description]" rows="5" cols="20" placeholder="Enter Description..." class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Please Enter a short description!
                    </div>
                </div>

                <div class="mb-3 main">
                    <lable for="image" class="form-label">Upload Menu...</lable>
                    <input 
                        type="file" 
                        name="listing[image]"  
                        class="form-control"
                        required
                    />
                    <div class="invalid-feedback">
                        Please upload an image!
                    </div>
                </div>
                
                <div class="row main">
                    <div class="mb-3 col-md-4">
                        <lable for="price" class="form-label">Price...</lable>
                        <input  
                        name="listing[price]" 
                        placeholder="e.g. 1000" 
                        class="form-control" 
                        required
                        />
                        <div class="invalid-feedback">
                            Price should be valid!
                        </div>
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-label">Country...</lable>
                        <input 
                        type="text" 
                        name="listing[country]" 
                        placeholder="e.g. India" 
                        class="form-control" 
                        required
                        />
                        <div class="invalid-feedback">
                            Country name should be valid!
                        </div>
                        
                    </div>
                </div>
                
                <div class="mb-3 main">
                    <lable for="location" class="form-label">Location...</lable>
                    <input type="text" name="listing[location]" placeholder="e.g. Taj Mahal Garden, Agra" class="form-control" required/>
                    <div class="invalid-feedback">
                        Location should be valid!
                    </div>
                </div>
                
                <button class="btn btn-dark add-btn mb-3">Add</button>    
            </form>
        </div>
    </div>
</body>
