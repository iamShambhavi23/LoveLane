<% layout("./layouts/boilerplate") %>
<%= success %>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings){ %>
        <a href="/listings/<%= listing._id %>" class="storing-link">
            <div class="card col listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="storing_image" style="height: 20rem;"/>
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title %></b>
                    <br/>
                    &#8377;&nbsp;<%= listing.price.toLocaleString("en-IN") %>/couple
                  </p>
                </div>
            </div>
        </a>
        
    <% } %>
</div>

