<% layout("./layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-6 offset-3 mb-3">
        <h3 class="mb-3">LogIn on LoveLane</h3>
        <form method="POST" action="/login" novalidate class="needs-validation">
            <div class="mb-3 main">
                <lable for="username" class="form-label">UserName...</lable>
                <input 
                    type="text" 
                    name="username" 
                    id="username"
                    placeholder="Enter username..." 
                    class="form-control"
                    required
                />
            </div>

            <div class="mb-3 main">
                <lable for="password" class="form-label">Password...</lable>
                    <input 
                        type="password" 
                        name="password" 
                        id="password"
                        placeholder="Enter Password..." 
                        class="form-control"
                        required
                    />
            </div>

            <button class="btn btn-dark add-btn mb-3">LogIn</button>    
        </form>
    </div>
</div>